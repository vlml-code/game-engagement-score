# Copy this file to .env and replace values with your credentials.
# Database configuration
DATABASE_URL="sqlite+aiosqlite:///./app.db"

# Steam Web API credentials
STEAM_API_KEY="your_steam_api_key"
STEAM_REQUEST_INTERVAL=0.35

# Guide parsing controls
GUIDE_REQUEST_INTERVAL=1.0

# HowLongToBeat throttling
HLTB_REQUEST_INTERVAL=1.2

# OpenAI settings for main-story detection
OPENAI_API_KEY="your_openai_api_key"
OPENAI_MODEL="gpt-4o-mini"
OPENAI_REQUEST_INTERVAL=2.0
